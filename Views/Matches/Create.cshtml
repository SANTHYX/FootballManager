@model FootballManagerApp.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Versus" class="control-label"></label>
                <input asp-for="Versus" class="form-control" />
                <span asp-validation-for="Versus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MachType" class="control-label"></label>
                <select asp-for="MachType" class="form-control" asp-items="Html.GetEnumSelectList<FootballManagerApp.Enums.TypeOfMatches>()"></select>
                <span asp-validation-for="MachType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfMatch" class="control-label"></label>
                <input asp-for="DateOfMatch" class="form-control" />
                <span asp-validation-for="DateOfMatch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-danger"> <a asp-action="Index">Back to List</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
