@model FootballManagerApp.Models.Trainer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainerOf" class="control-label"></label>
                <select asp-for="TrainerOf" class="form-control"asp-items="Html.GetEnumSelectList<FootballManagerApp.Enums.Position>()"></select>
                <span asp-validation-for="TrainerOf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-danger"> <a asp-action="Index">Back to List</a></button>
</div>

